<div id="tweet_stats">
  <div class="d-flex justify-content-start mb-4">
    <div class="me-4">Views</div>
    <div class="me-4"><span class="fw-bold"><%= tweet_presenter.retweets_count %></span> Retweets</div>
    <div class="me-4"><span class="fw-bold"><%= tweet_presenter.likes_count %></span> Likes</div>
  </div>

  <div class="d-flex justify-content-evenly action-links">
    <div>
      <%= link_to "#", class: "text-decoration-none text-black views" do %>
        <%= image_tag "chart.svg", width: "24", class: "me-1" %>
      <% end %>
    </div>
    <div>
      <%= link_to tweet_path(tweet_presenter.tweet), class: "text-decoration-none text-black replies" do %>
        <%= image_tag "chat.svg", width: "24", class: "me-1" %>
      <% end %>
    </div>
    <div>
      <%= link_to tweet_presenter.tweet_retweet_url(source: "tweet_show"), data: { "turbo-method": tweet_presenter.turbo_retweet_data_method }, class: "text-decoration-none text-black retweets" do %>
        <%= image_tag tweet_presenter.retweet_image, width: "24", class: "me-1" %>
      <% end %>
    </div>
    <div>
      <%= link_to tweet_presenter.tweet_like_url(source: "tweet_show"), data: { "turbo-method": tweet_presenter.turbo_like_data_method }, class: "text-decoration-none text-black likes" do %>
        <%= image_tag tweet_presenter.like_heart_image, width: "24", class: "me-1" %>
      <% end %>
    </div>
    <div>
      <%= link_to tweet_presenter.tweet_bookmark_url(source: "tweet_show"), data: { "turbo-method": tweet_presenter.turbo_bookmark_data_method }, class: "text-decoration-none text-black bookmark" do %>
        <%= image_tag tweet_presenter.bookmark_image, width: "24", class: "me-1" %>
      <% end %>
    </div>
  </div>
</div>
