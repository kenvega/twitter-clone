<%= turbo_frame_tag dom_id(tweet_presenter.tweet) do %>
  <div class="tweet d-flex py-3 px-3">
    <div class="flex-shrink-0">
      <%= image_tag tweet_presenter.avatar, size: "48x48", class: "rounded-circle" %>
    </div>

    <div class="flex-grow-1 ms-3">
      <p class="mb-0">
        <span class="fw-bolder"><%= tweet_presenter.display_name %></span>
        <span class="text-muted">@<%= tweet_presenter.username %> Â· <%= tweet_presenter.humanized_created_at %></span>
      </p>

      <p><%= tweet_presenter.body %></p>

      <div class="d-flex justify-content-between action-links">
        <div>
          <%= link_to "#", class: "text-decoration-none text-black views" do %>
            <%= image_tag "chart.svg", width: "20", class: "me-1" %>
            <span>Views</span>
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "text-decoration-none text-black replies" do %>
            <%= image_tag "chat.svg", width: "20", class: "me-1" %>
            <span>Replies</span>
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "text-decoration-none text-black retweets" do %>
            <%= image_tag "retweet.svg", width: "20", class: "me-1" %>
            <span>Retweets</span>
          <% end %>
        </div>
        <div>
          <%= link_to tweet_likes_path(tweet_presenter.tweet), data: { "turbo-method": "post" } , class: "text-decoration-none text-black likes" do %>
            <%= image_tag "heart.svg", width: "20", class: "me-1" %>
            <span><%= tweet_presenter.likes.size %></span>
          <% end %>
        </div>
        <div>
          <%= link_to "#", class: "text-decoration-none text-black bookmark" do %>
            <%= image_tag "bookmark.svg", width: "20", class: "me-1" %>
            <span>Bookmark</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>