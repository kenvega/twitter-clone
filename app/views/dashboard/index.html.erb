<div class="col-7">
  <div class="mb-3">
    <%= link_to "Home", dashboard_path, class: "fs-4 text-decoration-none text-black fw-semibold"%>
  </div>

  <div class="mb-4">
    <%= render "shared/tweet_form", form_submit_path: tweets_path, button_label: "Tweet" %>
  </div>

  <div id="tweets">

    <% if @tweet_activities.size > 0 %>
      <%= render partial: "tweets/tweet", collection: @tweet_activities, as: :tweet_presenter %>
    <% else %>
      <div class="p-2 text-muted">You can see tweets in your dashboard/feed by following people. Go to see <%= link_to "people to follow", users_path %>.</div>
    <% end %>
  </div>
</div>

<div class="col">
  <%= render "shared/hashtags_sidebar" %>
</div>
