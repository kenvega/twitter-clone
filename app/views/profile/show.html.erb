<div class="col-7">
  <div class="mb-3">
    <div class="mb-5">
      <%= link_to :back, class: "fs-4 text-decoration-none text-black fw-semibold" do %>
        <%= image_tag "back.svg", size: "28x28", class: "me-4" %>
        <span style="position: relative; top: 2px;"><%= current_user.username %></span>
        <span class="text-muted fs-6" style="position: relative; top: 2px;"><%= current_user.tweets.size %> Tweets</span>
      <% end %>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-5">
      <div>
        <% if current_user.avatar.present? %>
          <%= image_tag current_user.avatar, class: "rounded-circle", size: "150x150" %>
        <% else %>
          <%= image_tag "profile.svg", class: "rounded-circle", size: "150x150" %>
        <% end %>
      </div>
      <div><%= button_tag "Edit Profile", data: { "bs-toggle": "modal", "bs-target": "#profile-edit-modal" }, class: "btn btn-twitter-outline rounded-pill" %></div>
    </div>

    <%= render "profile_section" %>
  </div>
</div>

<div class="col">Search Bar / Trending / Who to follow</div>

<!-- Tweet Form Modal in sidebar -->
<div class="modal" id="profile-edit-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="btn-close close-modal-btn mx-0" data-bs-dismiss="modal" aria-label="Close">
        </button>
      </div>
      <div class="modal-body">
        <%= form_with model: current_user, url: profile_path, data: { controller: "tweet-form" }, method: :put, class: "row g-3" do |f| %>
          <div class="col-md-12">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control" %>
          </div>
          <div class="col-md-12">
            <%= f.label :display_name, class: "form-label" %>
            <%= f.text_field :display_name, class: "form-control" %>
          </div>
          <div class="col-md-12">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control" %>
          </div>
          <div class="col-md-12">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>
          <div class="col-md-12">
            <%= f.label :bio, class: "form-label" %>
            <%= f.text_area :bio, class: "form-control" %>
          </div>
          <div class="col-md-12">
            <%= f.label :location, class: "form-label" %>
            <%= f.text_field :location, class: "form-control" %>
          </div>
          <div class="col-md-12">
            <%= f.label :url, class: "form-label" %>
            <%= f.text_field :url, class: "form-control" %>
          </div>

          <div class="col-12">
            <%= f.submit "Update Profile", class: "btn btn-twitter rounded-pill" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>